---
import Layout from '../layouts/Layout.astro';

import Nav from '../components/nav.astro';
import Footer from '../components/footer.astro';
import CampaignFilters from '../components/campaign-filters.astro';
import CampaignSummary from '../components/campaign-summary.astro';
import AssessorOverviews from '../components/assessor-overviews.astro';
import AssessorAverages from '../components/assessor-averages.astro';

import '../styles/global.css';
---

<Layout>
	<header class="sticky top-0 z-50 bg-white shadow-md">
		<Nav />
	</header>

	<main class="bg-gray-200 p-4 md:p-8 space-y-8">
		<div class="max-w-7xl mx-auto">
			<h1 class="text-4xl md:text-6xl font-black text-brand-purple mt-1">
				<span
					class="text-xl md:text-3xl text-black font-normal mt-2 block"
					>BP Test Campaign</span
				>
				Campaign dashboard
			</h1>

			<CampaignFilters />

			<CampaignSummary />

			<AssessorOverviews />

			<AssessorAverages />
		</div>
	</main>

	<footer>
		<Footer />
	</footer>
</Layout>
